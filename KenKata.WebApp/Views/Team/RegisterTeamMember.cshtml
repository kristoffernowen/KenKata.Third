@model KenKata.Shared.Models.RegisterTeamMemberViewModel

@{
    ViewData["Title"] = "Register Team member";
}

<div class="d-flex justify-content-center">
    <form  asp-action="RegisterTeamMember" class="m-3 my-account-form-bg pt-3 ps-4 pe-3 ken-container">

    <h2 class=" mb-4">REGISTER TEAM MEMBER</h2>
    
    <div class="p-0  mb-4 ">
        <label>First name</label><span class="text-turquoise">*</span><br>
        <input asp-for="FirstName" type="text" class="formcontrol w-100 no-border py-2">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    
    <div class="p-0  mb-4 ">
        <label>Last name</label><span class="text-turquoise">*</span><br>
        <input asp-for="LastName" type="text" class="formcontrol w-100 no-border py-2">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    
    <div class="p-0  mb-4 ">
        <label>Title</label><span class="text-turquoise">*</span><br>
        <input asp-for="Title" type="text" class="formcontrol w-100 no-border py-2">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="p-0  mb-4 ">
        <label>Username</label><span class="text-turquoise">*</span><br>
        <input asp-for="RegisterUserModel.UserName" type="text" class="formcontrol w-100 no-border py-2">
        <span asp-validation-for="RegisterUserModel.UserName" class="text-danger"></span>
    </div>

    <div class="p-0 mb-4">
        <label>Email address</label><span class="text-turquoise">*</span><br>
        <input asp-for="RegisterUserModel.Email" type="text" class="formcontrol w-100 no-border py-2">
        <span asp-validation-for="RegisterUserModel.Email" class="text-danger"></span>
    </div>

    <div class="p-0">
        <label>Password</label><span class="text-turquoise">*</span><br>
        <input asp-for="RegisterUserModel.Password" type="password" class="formcontrol w-100 no-border mb-4 py-2">
        <span asp-validation-for="RegisterUserModel.Password" class="text-danger"></span>
    </div>
    
    <div asp-validation-summary="All" class="text-white bg-secondary"></div>

    

    <button type="submit" class="mt-4 mb-4 text-white bg-turquoise no-border my-account-button w-100 py-2">REGISTER</button>

</form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
