@model KenKata.Shared.Models.SignInUserModel

<form  asp-action="SignIn" class="m-3 w-100 my-account-form-bg pt-3 ps-4 pe-3 h-100">

    <h2 class=" mb-4">LOGIN</h2>

    <div class="p-0  mb-4 ">
        <label>Username or Email</label><span class="text-turquoise">*</span><br>
        <input asp-for="UserNameOrEmail" type="text" class="formcontrol w-100 no-border py-2">
    </div>

    

    <div class="p-0">
        <label>Password</label><span class="text-turquoise">*</span><br>
        <input asp-for="Password" type="password" class="formcontrol w-100 no-border mb-4 py-2">
    </div>
    
    <div asp-validation-summary="All" class="text-white bg-secondary"></div>
    
    

    <button type="submit" class="mt-4 mb-4 text-white bg-turquoise no-border my-account-button w-100 py-2">LOG IN</button>

</form>

