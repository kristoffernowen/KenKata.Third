@model KenKata.Shared.Models.Blog.UpdateBlogPostModel
@{
    ViewData["Title"] = "Update";
}

<div class="ken-container mt-5">
    <h2 class="mt-4">Edit</h2>

    <div class="row">
        <div class="col-md-4 mt-4">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Rubrik" class="control-label"></label>
                    <input asp-for="Rubrik" class="form-control mb-2" />
                    <span asp-validation-for="Rubrik" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Text" class="control-label"></label>
                    <textarea asp-for="Text" class="form-control mb-2" rows="7" cols="3"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImgUrl" class="control-label"></label>
                    <input asp-for="ImgUrl" class="form-control mb-2" />
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control mb-2" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <input asp-for="Category" class="form-control mb-2" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tag1" class="control-label"></label>
                    <input asp-for="Tag1" class="form-control mb-2" />
                    <span asp-validation-for="Tag1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tag2" class="control-label"></label>
                    <input  asp-for="Tag2" class="form-control mb-2">
                    <span asp-validation-for="Tag2" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 mt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-controller="AdminBlog">Back to List</a>
    </div>
</div>


